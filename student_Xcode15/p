// Step 1: Create a dictionary for days in a month
var daysInMonth: [String: Int] = ["January": 31, "February": 28, "March": 31]
print(daysInMonth) // Print the dictionary

// Step 2: Add April to the dictionary
daysInMonth["April"] = 30
print(daysInMonth) // Print the updated dictionary

// Step 3: Update February for a leap year
daysInMonth.updateValue(29, forKey: "February")
print(daysInMonth) // Print the updated dictionary

// Step 4: Retrieve the number of days in January
if let januaryDays = daysInMonth["January"] {
    print("January has \(januaryDays) days.") // Output: "January has 31 days."
}

// Step 5: Create a new dictionary with arrays
let shapesArray = ["Circle", "Square", "Triangle"]
let colorsArray = ["Red", "Green", "Blue"]

let categorizedDictionary: [String: [String]] = ["Shapes": shapesArray, "Colors": colorsArray]
print(categorizedDictionary) // Print the resulting dictionary

// Step 6: Print the last element of colorsArray
if let colors = categorizedDictionary["Colors"] {
    if let lastColor = colors.last {
        print("The last color is \(lastColor).") // Output: "The last color is Blue."
    }
}
